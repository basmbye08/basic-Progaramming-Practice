#include<stdio.h>
#include<time.h>

int linearSearch(int arr[], int n, int key) {
    for(int i=0; i<n; i++)
        if(arr[i]==key) return i;
    return -1;
}

int binarySearch(int arr[], int n, int key) {
    int low=0, high=n-1;
    while(low<=high) {
        int mid=(low+high)/2;
        if(arr[mid]==key) return mid;
        else if(arr[mid]<key) low=mid+1;
        else high=mid-1;
    }
    return -1;
}

void bubbleSort(int arr[], int n) {
    for(int i=0; i<n-1; i++)
        for(int j=0; j<n-i-1; j++)
            if(arr[j]>arr[j+1]) {
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
}

int main() {
    int arr[]={64,34,25,12,22,11,90,88,75,50};
    int n=10, key, result;
    
    printf("Array: ");
    for(int i=0; i<n; i++) printf("%d ", arr[i]);
    printf("\nEnter key to search: ");
    scanf("%d", &key);
    
    clock_t start=clock();
    result=linearSearch(arr, n, key);
    clock_t end=clock();
    if(result!=-1) printf("Linear Search: Found at %d\n", result);
    else printf("Linear Search: Not found\n");
    printf("Linear Search Time: %f\n",(double)(end-start)/CLOCKS_PER_SEC);
    
    int sorted[n];
    for(int i=0; i<n; i++) sorted[i]=arr[i];
    bubbleSort(sorted, n);
    
    start=clock();
    result=binarySearch(sorted, n, key);
    end=clock();
    if(result!=-1) printf("Binary Search: Found at %d\n", result);
    else printf("Binary Search: Not found\n");
    printf("Binary Search Time: %f\n",(double)(end-start)/CLOCKS_PER_SEC);
    
    printf("\nTime Complexity Comparison:\n");
    printf("Linear Search: O(n) - checks each element\n");
    printf("Binary Search: O(log n) - requires sorted array\n");
    
    return 0;
}
