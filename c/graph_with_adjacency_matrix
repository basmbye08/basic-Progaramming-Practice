#include<stdio.h>
#define MAX 10

int adj[MAX][MAX];
int vertices;

void createGraph() {
    printf("Enter number of vertices: ");
    scanf("%d", &vertices);
    
    for(int i=0; i<vertices; i++) {
        for(int j=0; j<vertices; j++) {
            adj[i][j]=0;
        }
    }
}

void insertEdge() {
    int u, v;
    printf("Enter edge (u v): ");
    scanf("%d%d", &u, &v);
    
    if(u>=vertices || v>=vertices) {
        printf("Invalid vertices\n");
        return;
    }
    
    adj[u][v]=1;
    adj[v][u]=1;
    printf("Edge inserted\n");
}

void printMatrix() {
    printf("Adjacency Matrix:\n");
    for(int i=0; i<vertices; i++) {
        for(int j=0; j<vertices; j++) {
            printf("%d ", adj[i][j]);
        }
        printf("\n");
    }
}

void adjacentVertices() {
    int v;
    printf("Enter vertex: ");
    scanf("%d", &v);
    
    if(v>=vertices) {
        printf("Invalid vertex\n");
        return;
    }
    
    printf("Vertices adjacent to %d: ", v);
    for(int i=0; i<vertices; i++) {
        if(adj[v][i]==1) {
            printf("%d ", i);
        }
    }
    printf("\n");
}

int main() {
    int ch;
    
    while(1) {
        printf("\n1.Create Graph\n");
        printf("2.Insert Edge\n");
        printf("3.Print Adjacency Matrix\n");
        printf("4.List Adjacent Vertices\n");
        printf("5.Exit\n");
        printf("Choice: ");
        scanf("%d", &ch);
        
        if(ch==1) createGraph();
        else if(ch==2) insertEdge();
        else if(ch==3) printMatrix();
        else if(ch==4) adjacentVertices();
        else if(ch==5) break;
        else printf("Invalid choice\n");
    }
    
    return 0;
}
