#include <stdio.h>

int main() {
    int numbers[5], i, sum = 0;
    
    printf("Enter 5 numbers:\n");
    
    // Read numbers
    for(i = 0; i < 5; i++) {
        printf("Number %d: ", i + 1);
        scanf("%d", &numbers[i]);
    }
    
    // Calculate sum
    for(i = 0; i < 5; i++) {
        sum += numbers[i];
    }
    
    // Display numbers
    printf("\nYou entered: ");
    for(i = 0; i < 5; i++) {
        printf("%d ", numbers[i]);
    }
    
    printf("\nSum = %d\n", sum);
    printf("Average = %.2f\n", sum / 5.0);
    
    return 0;
}
